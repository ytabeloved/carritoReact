export const getCat = () => [
    {id: 'salud', description: 'Salud'},
    {id: 'amor', description: 'Amor'},
    {id: 'proteccion', description: 'Proteccion'},
    {id: 'felicidad', description: 'Felicidad'}
]

export const getProd = (category) => {
    return new Promise((resolve,reject)=>{
        setTimeout(()=>{
            category ? resolve(products.filter(prod => prod.category === category)) : resolve(products)
        },1000)
        })
}

export const getProductById = (id) => {    
    return new Promise((resolve, reject) => {
        const product = products.find(prod => Number(prod.id) === Number(id))
        setTimeout(() => resolve(product), 1000)
    })
}